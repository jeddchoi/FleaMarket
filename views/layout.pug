  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#alertModal">
  Launch modal
  </button>
// Modal
#alertModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='alertModal', aria-hidden='true')
  .modal-dialog.modal-dialog-centered(role='document')
    .modal-content
      .modal-header
        h5#exampleModalLongTitle.modal-title Modal title
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') &times;
      .modal-body
        | ...
      .modal-footer
        button.btn.btn-secondary(type='button', data-dismiss='modal') Close
// Contents
main
  block content
// Footer
footer.py-5.bg-light
  .container
    p.m-0.text-center.text-dark Copyright &copy; Flea Market 2019
