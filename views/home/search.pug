extends ../layout.pug

block content
    .container
        
        .row
            .col-lg-3
                h1.my-5 Search
                h3.pt-3.search-label Product Name
                input#checkbox1.checkbox.pull-right.mx-2(type='checkbox')
                .my-3
                    form.form-inline
                        input.form-control(type='text', placeholder='Product Name', aria-label='Product Name')
                h3.pt-3.search-label Seller Name
                input#checkbox1.checkbox.pull-right.mx-2(type='checkbox')
                .my-3
                    form.form-inline
                        input.form-control(type='text', placeholder='Seller Name', aria-label='Seller Name')
                h3.pt-3.search-label Price
                input#checkbox1.checkbox.pull-right.mx-2(type='checkbox')
                .my-3
                    form.form-inline(style="float: left")
                        input.form-control(type='number', placeholder='Low Price', aria-label='Price')
                        input.form-control(type='number', placeholder='High Price', aria-label='Price')
                .my-4
                    form.mb-2(action="", method="post")
                        input.btn.btn-light.form-btn(style="width:100%" type='submit', value='Search')
            .col-lg-9.my-5
                .row
                    each product in products
                        .col-lg-4.col-md-6.mb-4
                            a.card.h-100(href="/product/:id")
                                img.card-img-top(src=`${product.image}`, alt='')
                                .card-footer
                                    if product.isAuction
                                        h5 Auction
                                    else
                                        h5 Buy It Now
                                .card-body
                                    h4.card-title=product.name
                                    h5="â‚©"+product.price
                                    p.card-text=product.description
