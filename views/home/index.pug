extends ../layout.pug

block content
  //- Header Carousel
  .container
    .owl-carousel.owl-theme
      .item
        img(src='img/carousel1.jpg', alt='')
        .item-text
          h1 Welcome to Flea Market!
          h5 This is the Flea Market. You can find products with reasonable price. Have a good time.
      .item
        img(src='img/carousel2.jpg', alt='')
        .item-text
          h1 Smartphone super sale!
          h5 Brand new Smartphones up to 50% off for 'Black Friday' this week!
      .item
        img(src='img/carousel3.jpg', alt='')
        .item-text
          h1 Recruiting
          h5 Open recruitment.
  //- Contents
  .container
    h1.my-5 Items
    //- Items
    .row
      each product in products
        .col-lg-4.col-md-6.mb-4
          a.card.h-100(href="/product/:id")
            img.card-img-top(src=`${product.image}`, alt='')
            .card-footer
              if product.isAuction
                h5 Auction
              else
                h5 Buy It Now
            .card-body
              h4.card-title=product.name
              h5="â‚©"+product.price
              p.card-text=product.description
