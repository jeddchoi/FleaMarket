extends ../layout.pug

block content 
  form.form.center-form(method='post')
    h2 Register User
    .form-group
      label(for='role') Role
      select#role.input-field(name='role')
        option Buyer
        option Seller  
    .form-group
      label(for='username') Username
      input#username.input-field(name='username', type='text' value=username)
    .form-group
      label(for='password') Password
      input#password.input-field(name='password', type='password')
    .form-group
      label(for='confirmedPassword') Confirm Password
      input#confirmedPassword.input-field(name='confirmedPassword', type='password')
    .form-group
      label(for='name') Name
      input#name.input-field(name='name', type='text' value=name)
    .form-group
      label(for='email') Email
      input#email.input-field(name='email', type='text' value=email)
    .form-group
      label(for='address') Address
      input#address.input-field(name='address', type='text' value=address)
    .form-group
      input.form-btn.btn(type='submit', value='Register')
