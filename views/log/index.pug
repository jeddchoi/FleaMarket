extends ../layout.pug

block content
    .container
        h1.my-5 Log
        .card.not-pointer
            .card-header
                i.fas.fa-table
                span.ml-2 Log
            .card-body
                .table-responsive
                    table#log.table.table-bordered(width='100%', cellspacing='0')
                        thead
                            tr
                                th(style='width:25%;') Time
                                th(style='width:20%;') Type
                                th(style='width:25%;') Product
                                th(style='width:20%;') User
                                th(style='width:10%;') Price
                        tfoot
                            tr
                                th Time
                                th Type
                                th Product
                                th User
                                th Price
                        tbody
                            each transaction in transactions
                                tr
                                    td=transaction.executedTime
                                    td=transaction.type
                                    if transaction.product == null
                                        td="null"
                                    else
                                        td=transaction.product.name
                                    if transaction.user == null
                                        td="null"
                                    else
                                        td=transaction.user.name
                                    td=transaction.price