extends ../layout.pug

block content
    .container
        h1.my-5 Popular Items
        //- Items
        .row
            each product in products
                .col-lg-4.col-sm-6.portfolio-item
                .card.h-100
                    img.card-img-top(src=`${product.image}`, alt='')
                .card-body
                    h4.card-title=product.name
                    p.card-text=product.description